@import "nib"
@import "fonts"

#header-container

	background linear-gradient(top, #f3f3f3, #fff)
	height 40px
	
	.header
		position relative
		overflow auto

		h1
			float left
			margin 0 0 0 10px
			noveCento(noveN, 14px, #666, 40px)
			a
				color #666
				text-decoration none
				
				&:hover
						color #333
						

        
		#topics
			list-style none
			text-align center
			margin 0 50px
			padding 0
			
			li
				display inline
				noveCento(noveM, 12px, #666, 40px)
				
				&:after
					content "|"
					margin 0 2px
					color #ccc
				&:last-child:after
					content none
					margin 0
				a
					color #666
					text-decoration none
					
					&:hover
						color #333	
		
		
		#prefs
			float right

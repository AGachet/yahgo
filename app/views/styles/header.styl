@import "nib"
@import "fonts"

#header-container

	background linear-gradient(top, #f3f3f3, #fff)
	min-height 40px
	
	.header
		position relative
		overflow auto

		h1
			margin 0 0 0 10px
			
			a
				float left
				noveCento(noveN, 14px, #666, 40px)
				text-decoration none
				
				&:hover
						color #333
						

        
		#topics
			list-style none
			text-align center
			margin 0 80px
			padding 8px 0 5px
			
			li
				display inline
				noveCento(noveM, 12px, #666, 200%)
				
				&:after
					content "|"
					margin 0 2px
					color #ccc
				&:last-child:after
					content none
					margin 0
				a
					color #666
					text-decoration none
					
					&:hover
						color #333	
		
		
		#prefs
			float right
			
			&:before
				color #666
				text-shadow 0 1px 0 #fff
				line-height 40px
				margin 0 15px 0 0
			
